extends layout
block script
  script(src='/lib/tinycolorpicker.js')
  script(src='/javascripts/client_upload.js')

block content
  form.params-form.mdc-cell.mdc-cell--12-col(action='/upload', method='POST', enctype="multipart/form-data")
    input(type='hidden', name='bucketName', value=configObj.bucketName)
    fieldset
      legend Company Data
      .mdc-form-field
        select.mdc-select(name='template', value=configObj.template, required)
          option(value='', default, selected) —Select Industry Template—
          option(value='fashion') Fashion
          option(value='finance') Finance
          option(value='news') News
          option(value='retail') Retail
          option(value='travel') Travel
      .mdc-form-field
        .mdc-textfield(data-mdc-auto-init='MDCTextfield')
          input.mdc-textfield__input(type='text', name='companyName', value=configObj.companyName)
          label.mdc-textfield__label(for='companyName') Company Name
      .mdc-form-field
        .mdc-textfield(data-mdc-auto-init='MDCTextfield')
          input.mdc-textfield__input(type='text', name='heroText', value=configObj.heroText)
          label.mdc-textfield__label Hero Text
      .mdc-form-field
        .mdc-textfield(data-mdc-auto-init='MDCTextfield')
          input.mdc-textfield__input(type='text', name='subText', value=configObj.subText)
          label.mdc-textfield__label Sub Text
      .mdc-form-field
        .mdc-textfield(data-mdc-auto-init='MDCTextfield')
          input.mdc-textfield__input(type='text', name='ctaText', value=configObj.ctaText)
          label.mdc-textfield__label Call-to-Action Text
    fieldset
      legend Company Visuals
      .mdc-form-field
        .mdc-textfield.mdc-textfield--file
          input.mdc-textfield__input(placeholder='Company Logo', type='text', readonly, value=configObj.companyLogo)
          .mdc-button.mdc-button--primary.mdc-button--icon.mdc-button--file
            input(type='file', name='companyLogo', onchange='showFileName(this)')
      .mdc-form-field
        .mdc-textfield.mdc-textfield--file
          input.mdc-textfield__input(placeholder='Homescreen Icon', type='text', readonly, value=configObj.homescreenIcon)
          .mdc-button.mdc-button--primary.mdc-button--icon.mdc-button--file
            input(type='file', name='homescreenIcon', onchange='showFileName(this)')
      .mdc-form-field
        .mdc-textfield.mdc-textfield--file
          input.mdc-textfield__input(placeholder='Hero Image', type='text', readonly, value=configObj.heroImage)
          .mdc-button.mdc-button--primary.mdc-button--icon.mdc-button--file
            input(type='file', name='heroImage', onchange='showFileName(this)')
    fieldset
      legend Industry-specific Things
      .mdc-form-field
        select.mdc-select(name='productCategory', value=configObj.productCategory)
          // From http://docs.aws.amazon.com/AWSECommerceService/latest/DG/LocaleUS.html
          option(value='', default, selected) —Select Product Category—
          option(value='All') All
          option(value='Appliances') Appliances
          option(value='ArtsAndCrafts') Arts, Crafts &amp; Sewing
          option(value='Automotive') Automotive
          option(value='Baby') Baby
          option(value='Beauty') Beauty
          option(value='Books') Books
          option(value='Collectibles') Collectibles &amp; Fine Arts
          option(value='Electronics') Electronics
          option(value='Fashion') Clothing, Shoes &amp; Jewelry
          option(value='FashionBaby') Clothing, Shoes &amp; Jewelry - Baby
          option(value='FashionBoys') Clothing, Shoes &amp; Jewelry - Boys
          option(value='FashionGirls') Clothing, Shoes &amp; Jewelry - Girls
          option(value='FashionMen') Clothing, Shoes &amp; Jewelry - Men
          option(value='FashionWomen') Clothing, Shoes &amp; Jewelry - Women
          option(value='GiftCards') Gift Cards
          option(value='Grocery') Grocery &amp; Gourmet Food
          option(value='Handmade') Handmade
          option(value='HealthPersonalCare') Health &amp; Personal Care
          option(value='HomeGarden') Home &amp; Kitchen
          option(value='Industrial') Industrial &amp; Scientific
          option(value='KindleStore') Ebooks
          option(value='LawnAndGarden') Patio, Lawn &amp; Garden
          option(value='Luggage') Luggage &amp; Travel Gear
          option(value='Magazines') Magazine Subscriptions
          option(value='MobileApps') Apps &amp; Games
          option(value='Movies') Movies &amp; TV
          option(value='MP3Downloads') Digital Music
          option(value='Music') CDs &amp; Vinyl
          option(value='MusicalInstruments') Musical Instruments
          option(value='OfficeProducts') Office Products
          option(value='Pantry') Prime Pantry
          option(value='PCHardware') Computers
          option(value='PetSupplies') Pet Supplies
          option(value='Software') Software
          option(value='SportingGoods') Sports &amp; Outdoors
          option(value='Tools') Tools &amp; Home Improvement
          option(value='Toys') Toys &amp; Games
          option(value='UnboxVideo') Streaming Video
          option(value='Vehicles') Vehicles
          option(value='VideoGames') Video Games
          option(value='Wine') Wine
          option(value='Wireless') Cell Phones &amp; Accessories
      .mdc-form-field
        .mdc-textfield(data-mdc-auto-init='MDCTextfield')
          input.mdc-textfield__input(type='text', name='productQuery', value=configObj.productQuery)
          label.mdc-textfield__label Product Query
      .mdc-form-field
        .mdc-textfield(data-mdc-auto-init='MDCTextfield')
          input.mdc-textfield__input(type='text', name='rssFeed', value=configObj.rssFeed)
          label.mdc-textfield__label RSS Feed
    fieldset
      legend Corporate Identity
      .mdc-form-field
        label.mdc-checkbox.mdc-js-checkbox.mdc-js-ripple-effect(for='uploadImage')
          input#uploadImage.mdc-checkbox__input(type='checkbox', onchange='toggleUploadImageField(this)')
          span.mdc-checkbox__label Upload Image to Pick Colors
      .mdc-form-field
        #fileForPicker(style='display: none;')
          .mdc-textfield.mdc-textfield--file
            input.mdc-textfield__input(placeholder='File for color picker', type='text', readonly)
            .mdc-button.mdc-button--primary.mdc-button--icon.mdc-button--file
                input(type='file', onchange='showFileName(this), uploadFile(this)')
      .mdc-form-field
        #colorsBlock
          #imageContainer.image-container
          #primaryFgColorWrapper.colorPicker-wrapper
            label.mdc-textfield__label Primary Foreground Color
            input#primaryFgColorPickerInput(type='color', name='primaryFgColor', value=configObj.primaryFgColor)
          #primaryBgColorWrapper.colorPicker-wrapper
            label.mdc-textfield__label Primary Background Color
            input#primaryBgColorPickerInput(type='color', name='primaryBgColor', value=configObj.primaryBgColor)
          #secondaryFgColorWrapper.colorPicker-wrapper
            label.mdc-textfield__label Secondary Foreground Color
            input#secondaryFgColorPickerInput(type='color', name='secondaryFgColor', value=configObj.secondaryFgColor)
          #secondaryBgColorWrapper.colorPicker-wrapper
            label.mdc-textfield__label Secondary Background Color
            input#secondaryBgColorPickerInput(type='color', name='secondaryBgColor', value=configObj.secondaryBgColor)
    .mdc-form-field
      input.mdc-button.mdc-js-button.mdc-button--raised.mdc-button--colored.mdc-js-ripple-effect(type='submit', value='Create PWA Demo')
